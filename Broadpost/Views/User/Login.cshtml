@model Broadpost.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<span class="text-danger">@ViewBag.Message</span>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" placeholder="Enter user name" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="Enter password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary rounded-pill" />
            </div>
        </form>
    </div>
</div>

<div>
    <span>Don't have an account?<a asp-controller="User" asp-action="Register">Signup</a></span>
    <a asp-controller="User" asp-action="ForgotPassword" class="d-block">ForgotPassword?</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

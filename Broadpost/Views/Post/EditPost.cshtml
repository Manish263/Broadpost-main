@model Broadpost.Models.Post

@{
    ViewData["Title"] = "Edit post";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Edit Post</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPost">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label asp-for="PostMessage" class="control-label"></label>
                <textarea asp-for="PostMessage" class="form-control"></textarea>
                <span asp-validation-for="PostMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Post" asp-action="Index">&#8592;back</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
